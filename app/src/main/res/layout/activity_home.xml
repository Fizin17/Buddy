<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefee8">

    <!-- Top Profile Icon -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/profile_icon"
        android:contentDescription="Profile Icon"
        app:tint="#0f5437" />

    <!-- HOME Title -->

    <!-- FRIENDS Button Box -->

    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imgProfile"
        android:layout_marginStart="114dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/imgProfile"
        android:text="HOME"
        android:textColor="#0f5437"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/btnFriends"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/imgProfile"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="#0f5437"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="301dp"
            android:layout_height="127dp"
            android:contentDescription="Friends"
            android:src="@drawable/friends" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginTop="8dp"
            android:text="FRIENDS"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- VISUAL GRAPH Button Box -->
    <LinearLayout
        android:id="@+id/btnVisualGraph"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/btnFriends"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:background="#0f5437"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true">

     <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chart"
        android:contentDescription="Visual Graph" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISUAL GRAPH"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#0f5437"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="Home Icon"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Friend -->
        <LinearLayout
            android:id="@+id/btnFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/friend"
                android:contentDescription="Friend Icon"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Report -->
        <LinearLayout
            android:id="@+id/btnReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/report"
                android:contentDescription="Report Icon"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
